@import ('../global-variables');

.sidebar {
    background-color: $theme-color-sidebar;
    position: fixed;
    z-index: 10;
    overflow-y: auto;
    width: 235px;
    height: 100%;
    //margin-left: -235px;
    margin-bottom: 40px;
    padding-bottom: 40px;
        white-space: nowrap;

    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -ms-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

@media screen and (max-width: 992px) {
    .sidebar {
        top: 54px;
        left: 0;
    }
}

@media print {
    .sidebar {
        display: none !important;
    }
}

@media (min-width: 992px) {
    .header-fields {
        display: none;
    }
}

::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 0 rgba(255, 255, 255, 1);
    border-radius: 3px;
}

::-webkit-scrollbar-thumb {
    border-radius: 3px;
    -webkit-box-shadow: inset 0 0 3px rgba(255, 255, 255, 1);
}

.toggle-button-sidebar {
    background-color: $theme-color-sidebar;
    color: $theme-color-text-sidebar;
    position: fixed;
    width: 235px;
    cursor: pointer;
    padding: 10px;
    bottom: 0;

    i {
        font-size: 23px;
    }

    &:hover {
        background-color: $theme-color-sidebar-hover;
    }

    border-top: 1px solid #cccccc;
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -ms-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
}

.collapsed-sidebar {
    width: 70px;
    z-index: 5;
    overflow: visible;

    span {
        display: none;
    }
}

ul li a {
    color: $nav-link-color;
}

ul li a:hover {
    color: $nav-link-color-hover;
}

ul li:hover {
    background: $nav-li-color;
}